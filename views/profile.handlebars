    <!-- Survey Section -->
    <div class="section gray">
        <div class="row container">
            <div id="survey" class="col s12"><a href="#survey"></a>
                <div class="container">
                    <h2>Question 1</h2>
                    <h4>Do you have a shelter in place plan?</h4>
                    <select class="custom-select" id="q1" required>
                        <option value="">Select an Option</option>
                        <option value="1">1 (Strongly Disagree) -- No Plan</option>
                        <option value="2">2 -- Limited Plan/No Rehers./No Docs.</option>
                        <option value="3">3 -- Limited Plan/Limited Rehers./Docs.</option>
                        <option value="4">4 -- Comprehensive Plan/Limited Rehers./ Docs.</option>
                        <option value="5">5 (Strongly Agree) -- Comprehensive S@H Plan/Comprehensive Rehers./Docs.
                        </option>
                    </select>
                    <h2>Question 2</h2>
                    <h4>Do you have an evacuation plan?</h4>
                    <select class="custom-select" id="q2" required>
                        <option value="">Select an Option</option>
                        <option value="1">1 (Strongly Disagree) -- No Plan</option>
                        <option value="2">2 -- Limited Plan/No Rehers./No Docs.</option>
                        <option value="3">3 -- Limited Plan/Limited Rehers./Docs. </option>
                        <option value="4">4 -- Comprehensive Plan/Limited Rehers./ Docs.</option>
                        <option value="5">5 (Strongly Agree) -- Comprehensive/Practiced Evac. Plan</option>
                    </select>
                    <h2>Question 3</h2>
                    <h4>Do you have a vehicle or a way to get out of the area?</h4>
                    <select class="custom-select" id="q3" required>
                        <option value="">Select an Option</option>
                        <option value="1">1 (Strongly Disagree) -- No Easy Vehicle Access</option>
                        <option value="2">2 -- Way to access vehicle(s) NOT immediate</option>
                        <option value="3">3 -- Circuitous vehicle access requiring > 2 hours to acess vehicle.
                        </option>
                        <option value="4">4 -- Direct/immediate access to vehcile with limited long distance
                            reliability</option>
                        <option value="5">5 (Strongly Agree) -- Long Distance Vehicle on Hand.</option>
                    </select>
                    <h2>Question 4</h2>
                    <h4>Do you have access to emergency funds in the form of cash?</h4>
                    <select class="custom-select" id="q4" required>
                        <option value="">Select an Option</option>
                        <option value="1">1 (Strongly Disagree) -- Little to no cash on hand</option>
                        <option value="2">2 -- $50-$100 cash on hand</option>
                        <option value="3">3 -- $100-$500 cash on hand</option>
                        <option value="4">4 -- $500-$5,000 cash on hand</option>
                        <option value="5">5 (Strongly Agree) -- >$5,000 cash on hand</option>
                    </select>
                    <h2>Question 5</h2>
                    <h4>Do you have food/rations available and ready?</h4>
                    <select class="custom-select" id="q5" required>
                        <option value="">Select an Option</option>
                        <option value="1">1 (Strongly Disagree) -- none < 1 week of food supply</option>
                        <option value="2">2 -- 1 month food supply</option>
                        <option value="3">3 -- 1-3 months food supply</option>
                        <option value="4">4 -- >3 & < 1 year months food supply</option>
                        <option value="5">5 (Strongly Agree) -- >1 year food supply</option>
                    </select>
                    <h2>Question 6</h2>
                    <h4>Do you have medication/OTC pharmaceuticals on hand?</h4>
                    <select class="custom-select" id="q6" required>
                        <option value="">Select an Option</option>
                        <option value="1">1 (Strongly Disagree) -- none to < 1 week med. supply</option>
                        <option value="2">2 -- 1 month med. supply</option>
                        <option value="3">3 -- 1-3 months med supply</option>
                        <option value="4">4 -- > 3 & < 1 year med supply</option>
                        <option value="5">5 (Strongly Agree) -- > 1 year med. supplies</option>
                    </select>
                    <h2>Question 7</h2>
                    <h4>Do you have hand sanitizer?</h4>
                    <select class="custom-select" id="q7" required>
                        <option value="">Select an Option</option>
                        <option value="1">1 (Strongly Disagree) -- none to < 1 week supply</option>
                        <option value="2">2 -- 1 month sanitizer supply</option>
                        <option value="3">3 -- 1-3 months sanitizer supply</option>
                        <option value="4">4 -- > 3 & < 1 year months sanitizer supply</option>
                        <option value="5">5 (Strongly Agree) -- >1 year sanitizer supplies</option>
                    </select>
                    <h2>Question 8</h2>
                    <h4>Do you have toiletries?</h4>
                    <select class="custom-select" id="q8" required>
                        <option value="">Select an Option</option>
                        <option value="1">1 (Strongly Disagree) -- none to < 1 week supply</option>
                        <option value="2">2 -- 1 month toiletries supply</option>
                        <option value="3">3 -- 1-3 month toiletries supply</option>
                        <option value="4">4 -- > 3 & < 1 year months toiletries supply</option>
                        <option value="5">5 (Strongly Agree) -- >1 year toiletry supplies</option>
                    </select>
                    <h2>Question 9</h2>
                    <h4>Do you have available facemasks/eye protection?</h4>
                    <select class="custom-select" id="q9" required>
                        <option value="">Select an Option</option>
                        <option value="1">1 (Strongly Disagree) -- none to < 1 week supply </option>
                        <option value="2">2 -- 1 month facemask supply</option>
                        <option value="3">3 -- 1-3 month facemask supply </option>
                        <option value="4">4 -- > 3 & < 1 year months facemask supply</option>
                        <option value="5">5 (Strongly Agree) -- > 1 year facemasks supplies surgical and N95's
                        </option>
                    </select>
                    <h2>Question 10</h2>
                    <h4>Do you have clean and portable water?</h4>
                    <select class="custom-select" id="q10" required>
                        <option value="">Select an Option</option>
                        <option value="1">1 (Strongly Disagree) -- no water or dirty water only.</option>
                        <option value="2">2 -- 1 week water supplies</option>
                        <option value="3">3 -- 1-3 month water supply</option>
                        <option value="4">4 -- > 3 & < 1 year months water supply</option>
                        <option value="5">5 (Strongly Agree) -- > 1 year of portable/potable water + life straws,
                            SteriPEN, or microfilters</option>
                    </select>
                    <br>
                    <br>
                    <button id="submitAnswers" class="btn waves-effect waves-light" type="submit" name="action">Submit
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>
        </div>

    <!-- Profile section -->
    <div class="row container">
    <div style="background-color:gray" id="profile" class="col s12">
        <!-- Profile image -->
        <form>
            <div class="col s6">
                <h4 id="username_image">kylafitz</h4>
