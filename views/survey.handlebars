<script>
    $("#submit").on("click", function (event) {
        event.preventDefault();
            
    
    function validateUser() {
        var isValid = true;
        $(".form-control").each(function(){
            if ($(this).val() === "") {
            isValid = false;
        }
        });
       
        $(".custom-select").each(function(){
        if ($(this).val() === "") {
            isValid = false;
        }
    });
        return isValid
    }
    if (validateUser()) {
        var dataUser = {
